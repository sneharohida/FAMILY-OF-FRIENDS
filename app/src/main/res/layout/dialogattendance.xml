<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hosnum"
        android:hint="Hostel Number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roomnum"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/hosnum"
        android:layout_alignParentStart="true"
        android:hint="Room Number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bednum"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/roomnum"
        android:layout_alignParentStart="true"
        android:hint="Bed Number"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bednum"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_bg"
        android:text="Done"
        android:id="@+id/butto"
        android:textColor="@color/white"
        android:textSize="27dp" />


</RelativeLayout>