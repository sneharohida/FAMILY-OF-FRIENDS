<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complaint.CF2"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/op"
        android:background="#0C0C0C"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:weightSum="1">

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                app:bmb_autoHide="true"
                app:bmb_buttonEnum="textOutsideCircle"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_5_2"
                app:bmb_normalColor="#ffffff"
                app:bmb_piecePlaceEnum="piecePlace_dot_5_1"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/oo"
                android:layout_marginTop="10dp"
                android:layout_weight="0.9"
                android:background="@drawable/rec"
                android:fontFamily="@font/berkshire_swash"
                android:paddingLeft="40dp"
                android:text="Hygiene"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.9"
                android:id="@+id/aa"
                android:background="@drawable/red_pur"
                android:fontFamily="@font/berkshire_swash"
                android:paddingRight="40dp"
                android:text="Repairing"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />


            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                app:bmb_normalColor="#ffffff"
                app:bmb_autoHide="true"
                app:bmb_buttonEnum="textOutsideCircle"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_8_2"
                app:bmb_piecePlaceEnum="piecePlace_dot_8_2" />


        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:weightSum="1"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:orientation="horizontal">

                <com.nightonke.boommenu.BoomMenuButton
                    android:id="@+id/bmb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bmb_autoHide="true"
                    android:layout_weight="0.1"
                    app:bmb_buttonEnum="textOutsideCircle"
                    app:bmb_buttonPlaceEnum="buttonPlace_sc_5_2"
                    app:bmb_normalColor="#ffffff"
                    app:bmb_piecePlaceEnum="piecePlace_dot_5_1"
                    app:bmb_shadowColor="#00ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/pi_pu"
                    android:layout_weight="0.9"
                    android:id="@+id/bb"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="40dp"
                    android:fontFamily="@font/berkshire_swash"
                    android:text="Pest Control"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:weightSum="1"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/berkshire_swash"
                    android:text="Water Issues"
                    android:layout_weight="0.9"
                    android:layout_marginTop="10dp"
                    android:paddingRight="40dp"
                    android:id="@+id/cc"
                    android:textAlignment="textEnd"
                    android:background="@drawable/yel_ora"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />

                <com.nightonke.boommenu.BoomMenuButton
                    android:id="@+id/bmb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    app:bmb_autoHide="true"
                    app:bmb_buttonEnum="textOutsideCircle"
                    app:bmb_buttonPlaceEnum="buttonPlace_sc_5_2"
                    app:bmb_normalColor="#ffffff"
                    app:bmb_piecePlaceEnum="piecePlace_dot_5_1"
                    app:bmb_shadowColor="#00ffffff" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <com.nightonke.boommenu.BoomMenuButton
                    android:id="@+id/bmb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:bmb_autoHide="true"
                    android:layout_weight="0.1"
                    app:bmb_buttonEnum="textOutsideCircle"
                    app:bmb_buttonPlaceEnum="buttonPlace_sc_5_2"
                    app:bmb_normalColor="#ffffff"
                    app:bmb_piecePlaceEnum="piecePlace_dot_5_1"
                    app:bmb_shadowColor="#00ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/rec"
                    android:layout_weight="0.9"
                    android:id="@+id/dd"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="40dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/berkshire_swash"
                    android:text="Mess"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/berkshire_swash"
                    android:text="Security"
                    android:layout_weight="0.9"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="textEnd"
                    android:id="@+id/ee"
                    android:paddingRight="40dp"
                    android:background="@drawable/red_pur"
                    android:textSize="25dp" />

                <com.nightonke.boommenu.BoomMenuButton
                    android:id="@+id/bmb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bmb_autoHide="true"
                    app:bmb_buttonEnum="textOutsideCircle"
                    app:bmb_buttonPlaceEnum="buttonPlace_sc_5_2"
                    app:bmb_normalColor="#ffffff"
                    app:bmb_piecePlaceEnum="piecePlace_dot_5_1"
                    app:bmb_shadowColor="#00ffffff" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bmb_autoHide="true"
                app:bmb_buttonEnum="textOutsideCircle"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_5_2"
                app:bmb_normalColor="#ffffff"
                app:bmb_piecePlaceEnum="piecePlace_dot_5_1"
                app:bmb_shadowColor="#00ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/ff"
                android:fontFamily="@font/berkshire_swash"
                android:text="Staff Behaviour"
                android:layout_weight="0.9"
                android:paddingLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pi_pu"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:weightSum="1"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/berkshire_swash"
                    android:text="Missing Items"
                    android:layout_weight="0.9"
                    android:background="@drawable/yel_ora"
                    android:textAlignment="textEnd"
                    android:paddingRight="40dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:textSize="25dp" />


                <com.nightonke.boommenu.BoomMenuButton
                    android:id="@+id/bmb8"
                    android:layout_weight="0.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bmb_autoHide="true"
                    app:bmb_buttonEnum="textOutsideCircle"
                    app:bmb_buttonPlaceEnum="buttonPlace_sc_5_2"
                    app:bmb_normalColor="#ffffff"
                    app:bmb_piecePlaceEnum="piecePlace_dot_5_1"
                    app:bmb_shadowColor="#00ffffff" />


            </LinearLayout>



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:background="@drawable/rec">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/berkshire_swash"
                android:text="Other"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>