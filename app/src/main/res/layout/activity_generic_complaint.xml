<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Complaint.Generic_complaint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Complaint.Generic_complaint"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:padding="12dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/chk"
            android:buttonTint="@color/white"
            android:text="Anonymous"
            android:textColor="@color/white"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/pi_pu"
        android:transitionName="logo_text">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hos_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gen"
          android:layout_margin="5dp"
            android:layout_weight="0.50"
            android:hint="Hostel Num"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/floor_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:background="@drawable/gen"

            android:layout_weight="0.50"
            android:hint="Floor Num">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textColor="#000000"/>
        </com.google.android.material.textfield.TextInputLayout>




</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/room_num"
                android:layout_width="wrap_content"
                android:background="@drawable/gen"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:layout_weight="0.28"
                android:hint="Room No"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mess_num"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:layout_weight="0.28"
                android:background="@drawable/gen"

                android:hint="Mess No">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#000000"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/washroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.44"
                android:background="@drawable/gen"


                android:hint="Washroom No">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>

</LinearLayout>


</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff Details"
            android:layout_marginTop="60dp"
            android:textSize="25sp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/pi_pu"
            android:layout_gravity="center"
            android:transitionName="logo_text">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/staffname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_margin="5dp"

                android:background="@drawable/gen"

                android:hint="Name"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/staff_role"
                android:layout_width="wrap_content"
                android:background="@drawable/gen"
                android:layout_margin="5dp"

                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:hint="Role">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#000000"/>
            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/pi_pu"
            android:padding="10dp"
            android:text="Brief Description"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:transitionName="logo_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/gen">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Description">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textColor="#000000"/>
        </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:background="@drawable/rec"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@id/button"
            android:text="Submit"/>

    </LinearLayout>

</ScrollView>