<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_margin="12sp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/background_gradient"
        android:layout_width="match_parent"
        android:background="@color/card2"
        android:layout_height="match_parent"
        android:padding="15dp">
        <ImageView
            android:id="@+id/categories_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/pavbhaji" />
        <TextView
            android:id="@+id/categories_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Restaurant"
            android:layout_toRightOf="@id/categories_image"
            android:textAllCaps="true"
            android:textColor="#272727"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/categories_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asbkd asudhlasn saudnas jasdjasl hisajdl asjdlnas"
            android:layout_below="@id/categories_title"
            android:layout_toRightOf="@id/categories_image"
            android:padding="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>